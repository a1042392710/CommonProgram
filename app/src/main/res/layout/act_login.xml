<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackGround"
    android:orientation="vertical">

    <View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="80dp">

        <ImageView
            android:id="@+id/img_launcher"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginRight="10dp"
            android:background="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@id/img_launcher"
            android:includeFontPadding="false"
            android:text="华源梁氏"
            android:textColor="#57a442"
            android:textSize="24sp" />

        <View
            android:id="@+id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_alignLeft="@id/tv_title"
            android:layout_alignRight="@id/tv_title"
            android:layout_below="@id/tv_title"
            android:layout_marginBottom="6dp"
            android:background="#57a442" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/view_line"
            android:layout_below="@id/view_line"
            android:includeFontPadding="false"
            android:text="OA智能办公系统"
            android:textColor="#57a442"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/shape_login_et_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="手机号"
                android:textColor="#333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:paddingBottom="15dp"
                android:paddingLeft="6dp"
                android:paddingTop="15dp"
                android:textColor="#333333"
                android:textColorHint="#b7b7b7"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/baseBackGround" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="密码"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一"
                android:textColor="#333333"
                android:textSize="14sp"
                android:visibility="invisible" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingBottom="15dp"
                android:paddingLeft="6dp"
                android:paddingTop="15dp"
                android:maxLines="1"
                android:textColor="#333333"
                android:textColorHint="#b7b7b7"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_forget_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="忘记密码?"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textColor="#aad171"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_login_no_select_bg"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="16sp" />
</LinearLayout>